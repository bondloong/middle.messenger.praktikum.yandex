{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "max-len": [
      2,
      120
    ],
    "spaced-comment": "error",
    "semi": "error",
    "@typescript-eslint/no-var-requires": 1,
    "@typescript-eslint/no-unused-vars": 0,
    "@typescript-eslint/ban-types": 1,
    "@typescript-eslint/ban-ts-comment": 0,
    "@typescript-eslint/no-explicit-any": 0,
    "prettier/prettier": [
      "error",
      {
        "useTabs": true,
        "tabWidth": 1,
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "bracketSpacing": true,
        "endOfLine": "auto",
        "overrides": [
          {
            "files": "**/*.hbs",
            "options": {
              "parser": "angular"
            }
          }
        ]
      }
    ]
  }
}
